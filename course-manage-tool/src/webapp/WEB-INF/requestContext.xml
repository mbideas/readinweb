<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <bean id="ManageClassBean" class="br.unicamp.iel.tool.ManageClassBean">
    <property name="logic"
      ref="br.unicamp.iel.logic.ReadInWebClassManagementLogic" />
  </bean>

  <bean id="CreateClassBean" class="br.unicamp.iel.tool.CreateClassBean">
    <property name="logic"
      ref="br.unicamp.iel.logic.ReadInWebClassManagementLogic" />
  </bean>

  <bean class="br.unicamp.iel.tool.producers.ClassesProducer">
    <property name="logic"
      ref="br.unicamp.iel.logic.ReadInWebClassManagementLogic" />
    <property name="userDirectoryService"
      ref="org.sakaiproject.user.api.UserDirectoryService" />
    <property name="toolManager" ref="org.sakaiproject.tool.api.ToolManager" />
    <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
    <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
  </bean>

  <bean class="br.unicamp.iel.tool.producers.ClassProducer">
    <property name="logic"
      ref="br.unicamp.iel.logic.ReadInWebClassManagementLogic" />
  </bean>

  <bean class="br.unicamp.iel.tool.producers.CreateClassProducer">
    <property name="logic"
      ref="br.unicamp.iel.logic.ReadInWebClassManagementLogic" />
    <property name="userDirectoryService"
      ref="org.sakaiproject.user.api.UserDirectoryService" />
    <property name="createClassBean" ref="CreateClassBean" />
    <property name="destroyer" ref="resultsScope" />
  </bean>
</beans>