<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="br.unicamp.iel.model.Justification" table="readinweb_justifications">
        <id name="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property name="sentDate" column="date_sent" not-null="true" type="date"/>
        <property name="evaluatedDate" column="date_evaluated" type="date"/>
        
        <property name="explanation" type="string"/>
        <property name="state" type="byte"/>
        
        <property name="user" column="user_id" type="string" length="255" />
        
        <set name="messages" table="readinweb_justification_messages" inverse="true"
			lazy="true" fetch="join">
			<key foreign-key="message_justification_fk">
				<column name="justification_id" />
			</key>
			<one-to-many class="br.unicamp.iel.model.JustificationMessage" />
		</set>
    </class>
</hibernate-mapping>
